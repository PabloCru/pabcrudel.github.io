---
interface Props {
  title?: string;
  description?: string;
}

const fallbackTitle = "Pablo Cru Delhom - Full Stack Web Developer";

const fallbackDescription =
  "Here you can find who am I and what are my most valuated projects." +
  " Also my studies and skills can be found here.";

const { description = fallbackDescription, title = fallbackTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    {/* Character encoding */}
    <meta charset="UTF-8" />

    {/* Consistent user experience across different mobile devices */}
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* Primary SEO Tags */}
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Pablo Cru Delhom" />
    <link rel="canonical" href={Astro.url} />

    {/* Credit to Astro */}
    <meta name="generator" content={Astro.generator} />

    {
      /*
      Global stylesheets & Favicon located in "public/" directory.
      For example, path '/favicon.ico' will resolve to {username}.github.io/favicon.ico,
      making it accessible to all repositories under this GitHub Pages domain.
      */
    }
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/layout.css" />
  </head>
  <body>
    <slot />
  </body>
</html>
