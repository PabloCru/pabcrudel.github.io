---
/** Inspired by:
 * - https://github.com/withastro/astro/tree/main/examples/blog
 */

interface Props {
  date: Date;
  dateStyle?: "long" | "full" | "medium" | "short";
}

const { date, dateStyle = "medium" } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    /*
      Display the date in a long format and Universal Time Coordinated (UTC),
      ensuring consistency and neutrality across different time zones.
    */
    date.toLocaleDateString("en-us", { dateStyle, timeZone: "UTC" })
  }
</time>
