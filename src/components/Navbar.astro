---
interface INavigationLink {
  title: string;
  url: string;
}

const navigationLinkList: INavigationLink[] = [
  { title: "Pablo Cru Delhom", url: "/" },
  { title: "My studies", url: "/#education" },
  { title: "NASA SpaceApps winner", url: "/#hackathon-winner-firespotter" },
  { title: "Highlighted Projects", url: "https://github.com/pablocru?tab=repositories" },
];
---

<nav id="top-bar-links">
  <ul>
    {
      navigationLinkList.map(({ title, url }) => (
        <li>
          <a href={url}>{title}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    /* Hide nav on small devices */
    display: none;
  }

  @media screen and (min-width: 1100px) {
    body {
      /* Leave space on the top for the nav
       * I know that this is not the best idea but I can't place nav on the top
       * using grid or flex because I couldn't control nav's width.
       * If you know how to achieve that, please open an issue on github here:
       * - https://github.com/pablocru/pablocru.github.io/issues
      */
      margin-top: 100px;
    }

    nav {
      /* Display nav on bigger devices */
      display: block;
    }

    @supports (position: absolute) {
      nav {
        /* Move nav to the top of the page by css */
        position: absolute;
        top: 0;
        left: 0;
        right: 0;

        /* Display a simple shadow to separate nav visually */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
    }

    nav ul {
      /* Center content */
      max-width: 1100px;
      padding: 1em;
      margin: auto;

      /* Remove bullet points */
      list-style: none;

      /* Place items in the same row leaving space between them */
      display: flex;
      justify-content: space-between;
    }
  }
</style>
